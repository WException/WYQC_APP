/* 
  天气和通知
*/
.box1{
  margin-left: 10rpx;
  display: flex;
}
.box1_1{
  margin-right: 100rpx;
}
.box1_img{
  width: 50rpx;
  height: 50rpx;
}
.box1 .box1_text1{
  position: relative;
  top: -10rpx;
}
.box1_2{
  display: flex;
}
.box1_2_1{
  height: 100%;
  width: 400rpx;
}
.box1_2_1 swiper{
  height: 100%;
  width: 400rpx;
}
.box1_2_1 swiper swiper-item{
  color: #666;
}
/* 
  轮播图
*/
.box2{
  margin: 20rpx 0;
}
swiper swiper-item{
  display: flex;
  justify-content: center;
}
swiper swiper-item image{
  width: 640rpx;
  height: 300rpx;
  border-radius: 20rpx;
}
/* 
  弹幕墙
*/
.box3{
  width: 700rpx;
  margin: 0 auto;
}
.box4{
  width: 700rpx;
  height: 150rpx;
  margin: 0 auto;
  display: flex;
}
.vimg{
  width: 50rpx;
  height: 150rpx;
}
.vtext{
  width: 650rpx;
  height: 150rpx;
  position: relative;
  /* 超出部分弹幕隐藏 */
  overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.vtext>text{
  position: absolute;
  /* left: ;
  right: ; */
  
}
.iconfont{
  display: block;
  width: 50rpx;
  height: 50rpx;
  font-size: 40rpx;
  line-height: 50rpx;
}
/* 
  今日景点推荐
*/
.box5{
  width: 700rpx;
  margin: 20rpx auto;
}
.box5_text{
  font-weight: bold;
}
.box5_1{
  width: 700rpx;
  height: 190rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  border: #6495ED solid 1rpx;
  display: flex;
  /* 阴影效果 */
  /* box-shadow: 5px 5px 5px #888888; */
  box-shadow: 5px 5px 2px 1px rgba(88, 88, 88, .2)
}
.box5_1 image{
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  width: 250rpx;
  height: 150rpx;
  border-radius: 5rpx;
}
.box5_1_1{
  width: 400rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.title{
  /* font-family: 隶书; */
  font-size: 150%;
  /* font-family: serif; */
}
.box5_1_1_2{
  /* font-family: cursive; */
  font-size: 75%;
  height: 100rpx;
}
.value{
  /* 景点介绍文本为两行，超出部分自动隐藏 */
  overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #666;
}
