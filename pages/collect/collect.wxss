/* pages/collect/collect.wxss */
.box5{
  width: 700rpx;
  margin: 20rpx auto;
}
.box5_text{
  font-weight: bold;
  font-size: 20px;
}
.box5_1{
  width: 700rpx;
  height: 190rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  border: #6495ED solid 1rpx;
  display: flex;
  /* 阴影效果 */
  /* box-shadow: 5px 5px 5px #888888; */
  box-shadow: 5px 5px 2px 1px rgba(88, 88, 88, .2)
}
.box5_1 image{
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  width: 250rpx;
  height: 150rpx;
  border-radius: 5rpx;
}
.box5_1_1{
  width: 400rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.title{
  /* font-family: 隶书; */
  font-size: 150%;
  /* font-family: serif; */
}
.box5_1_1_2{
  /* font-family: cursive; */
  font-size: 75%;
  height: 100rpx;
}
.value{
  /* 景点介绍文本为两行，超出部分自动隐藏 */
  overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #666;
}